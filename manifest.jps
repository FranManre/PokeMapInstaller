{
  "jpsType": "install",
  "application": {
    "name": "PokemonGo Map",
    "homepage": "https://github.com/AHAAAAAAA/PokemonGo-Map/",
    "description": "Find all the pokemon in your area... and more!",
    "logo": "https://raw.githubusercontent.com/sych74/PokemonGo-Map-in-Cloud/master/images/icon-70x70.png",
    "settings": {
      "fields": [
        {
          "default": "ptc",
          "type": "radiolist",
          "values": {
            "google": "Your Google Account",
            "ptc": "Your Pokemon Club Account"
          },
          "hideLabel": true,
          "name": "auth"
        },
        {
          "name": "username",
          "caption": "User",
          "type": "string",
          "inputType": "string",
          "default": "manre1",
          "required": "true"
        },
        {
          "name": "password",
          "caption": "Password",
          "type": "string",
          "inputType": "password",
          "default": "000000",
          "required": "true"
        },
        {
          "name": "location",
          "caption": "Your Location",
          "type": "string",
          "default": "40.03572, -3.607221",
          "required": "true"
        },
        {
          "name": "stepsAway",
          "caption": "Steps Away",
          "type": "string",
          "default": "10",
          "required": "true"
        },
        {
          "name": "gmapKey",
          "caption": "Google Map API Key",
          "type": "string",
          "default": "AIzaSyBPoV0D2LWC6EDnb8wMUdJXcMx7WE_KuFs",
          "required": "true"
        }
      ]
    },
    "env": {
      "displayName": "Map Server",
      "topology": {
        "nodes": [
          {
            "cloudlets": 16,
            "nodeGroup": "cp",
            "nodeType": "docker",
            "docker": {
              "image": "franmanre/pokemap",
              "cmd": "-a \"${settings.auth}\" -u \"${settings.username}\" -p \"${settings.password}\" -l \"${settings.location}\" -st \"${settings.stepsAway}\" -k \"${settings.gmapKey}\" --port 80 -sd 10"
            }
          }
        ]
      }
    }
  }
}
